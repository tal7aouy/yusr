# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# PHP files
[*.php]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.yml]
indent_style = space
indent_size = 2

# Composer file
[composer.json]
indent_style = space
indent_size = 4

# Configuration files
[*.{xml,dist}]
indent_style = space
indent_size = 4

# Bash scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Git configuration files
[.git*]
indent_style = tab

# Dotenv files
[.env*]
indent_style = space
indent_size = 2